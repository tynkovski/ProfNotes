<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfsoftNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="labelVisibilityMode">
            unlabeled
        </item>
        <item name="elevation">
            0dp
        </item>
        <item name="android:background">
            @android:color/transparent
        </item>
    </style>

    <style name="Login">
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="Login.Login">
        <item name="android:textSize">
            24sp
        </item>
    </style>

    <style name="Login.Title">
        <item name="android:textSize">
            32sp
        </item>
    </style>

    <style name="Login.Appeal">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            @color/gray_94
        </item>
    </style>

    <style name="Login.EditText">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:paddingStart">
            12dp
        </item>
        <item name="android:paddingEnd">
            12dp
        </item>
    </style>

    <style name="Login.Button">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="cornerRadius">
            8dp
        </item>
    </style>
</resources>